{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@/components/*": [
        "./src/components/*"
      ],
      "@/components": [
        "./src/components"
      ],
      "@/styles/*": [
        "./src/styles/*"
      ],
      "@/utils/*": [
        "./src/utils/*"
      ],
      "@/assets/*": [
        "./src/assets/*"
      ],
      "@/assets": [
        "./src/assets"
      ],
      "@/hooks/*": [
        "./src/hooks/*"
      ],
      "@/hooks": [
        "./src/hooks"
      ],
      "@/store/*": [
        "./src/store/*"
      ]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
